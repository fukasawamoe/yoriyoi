<main class="container mx-auto flex justify-center">
  <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="mt-10 text-center text-2xl font-sans leading-9 tracking-tight text-gray-900">AIキャラクター設定変更</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <%= form_with model: @character, url: characters_path, local: true, class: "space-y-6" do |f| %>
        <%= render 'shared/error_messages', object: @character %>
        <div>
          <%= f.label :name, "おなまえ", class: "leading-7 text-sm text-gray-600" %>
          <%= f.text_field :name, required: true, class: "w-full bg-white rounded border border-gray-300  focus:ring-2 focus:ring-indigo-60 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>

        <div>
          <%= f.label :personality, "性格", class: "leading-7 text-sm text-gray-600" %>
          <%= f.select :personality, [['明るい', 'frisky'],['優しい', 'kind'], ['厳しい', 'strict'], ['面白い', 'amusing'], ['礼儀正しい', 'polite'], ['愛情深い', 'affectionate'],['上品', 'gracious'] ], {}, required: true, class: "w-full bg-white rounded border border-gray-300  focus:ring-2 focus:ring-indigo-60 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>

        <div>
          <%= f.label :communication_style, "話し方のスタイル", class: "leading-7 text-sm text-gray-600" %>
          <%= f.select :communication_style, [['友達口調', 'Casual Japanese'], ['敬語', 'Polite Japanese'], ['命令口調', 'tone of command'] ], {}, required: true, class: "w-full bg-white rounded border border-gray-300  focus:ring-2 focus:ring-indigo-60 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>

        <div>
          <%= f.label :relationship, "あなたとの関係性", class: "leading-7 text-sm text-gray-600" %>
          <%= f.select :relationship, [['友達', 'friend'], ['家族', 'family'], ['先輩', 'senior'], ['後輩', 'junior'], ['恋人"男性"', 'boyfriend'],['恋人"女性"', 'girlfriend'] ], {}, required: true, class: "w-full bg-white rounded border border-gray-300  focus:ring-2 focus:ring-indigo-60 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>

        <div>
          <%= f.label :additional, "追加の設定", class: "leading-7 text-sm text-gray-600" %>
          <%= f.text_field :additional, class: "w-full bg-white rounded border border-gray-300  focus:ring-2 focus:ring-indigo-60 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>

        <div>
          <%= f.label :image, "キャラクターの画像", class: "leading-7 text-sm text-gray-600" %>
          <%= f.file_field :image, accept: 'image/jpg, image/jpeg, image/png, image/gif', id: 'image-upload' %>
          <% if @character.image.attached? %>
            <%= image_tag @character.image, id: 'preview', size: '300x200' %>
          <% else %>
            <%= image_tag 'cat_information.png', id: 'preview', size: '300x200', style: 'display: none;' %>
          <% end %>
        </div>

        <div class="flex justify-center p-7">
          <%= f.submit "更新する", class: " w-full bg-indigo-600 shadow-xl hover:bg-indigo-500 text-white font-bold rounded-full p-4 w-48" %>
        </div>

        <div class="flex justify-center underline">
          <%= link_to "ホームに戻る", home_index_path %>
        </div>
      <% end %>
    </div>
  </div>
</main>

