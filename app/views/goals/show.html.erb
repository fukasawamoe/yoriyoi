<div class="md:mr-2 w-full md:w-1/2 flex flex-col relative overflow-auto" style="height: 40rem; background: #eaf5f9; border: dotted 2px #27acd9; padding: 1rem;">
  <h2 class="text-xl text-white flex justify-center w-auto p-3 bg-sky-500 rounded-tr-full rounded-tl-full">理想のあなた</h2>
  <div class="h-full bg-amber-50 z-0 relative overflow-auto mb-5", style="box-shadow: inset 0 0 10px 3px #eaf5f9;">
    <div class="text-right relative z-0 m-10">
      <%= link_to '理想の自分の編集', edit_goal_path(current_user.id)%>
    </div>
    <div class="text-left relative z-0 m-10">
      <h2 class="text-xl text-gray-900 font-medium title-font mb-2">理想のあなた</h2>
      <ul class="list-disc list-inside">
        <li class="p-3"><%= goal.ideal_self %></li>
      </ul>
    </div>
  </div>

  <h2 class="text-xl text-white flex justify-center w-auto p-3 bg-sky-500 rounded-tr-full rounded-tl-full">理想を実現するためには</h2>
  <div class="h-full bg-amber-50 z-0 relative overflow-auto", style="box-shadow: inset 0 0 10px 3px #eaf5f9;">
    <div class="text-left relative z-0 m-10">
      <%= link_to 'ステップの編集', edit_step_path(goal.id)%>
    </div>
    <div class="text-left relative z-0 m-10">
      <h2 class="text-xl text-gray-900 font-medium title-font mb-2">理想に向けてすること</h2>
      <ul class="list-disc list-inside">
        <% (1..3).each do |i| %>
          <% action = step.send("action_#{i}") %>
          <% times_set = step.send("times_set_#{i}") %>
          <% if action.present? && times_set.present? %>
            <li class="p-3"><%= action %>を週<%= times_set %>回行う</li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>