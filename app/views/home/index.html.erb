<main class="w-full px-5 xl:px-40 mx-auto">
  <%= render "ai_message", task: @next_task %>
  <div class="w-full">
    <div class="flex flex-wrap md:flex-nowrap">
      <%= render template: "goals/show", locals: { goal: @goal, steps: @steps, step: @step } %>
      <div class="mt-3 md:mt-0 m-0 md:m-1 w-full md:w-1/2 flex flex-col overflow-auto" style="height: 40rem; border: dotted 2px #f7e9e8; padding: 1rem;">
        <div class="box75 w-full">
          <div class="box-title">あなたのスケジュール</div>
            <div class="m-10">
              <% if @schedules.empty? %>
                <div class="flex flex-col justify-center items-center py-10">
                  <p class="my-20 whitespace-normal md:whitespace-pre-wrap lg:whitespace-normal">スケジュールを作成してくださいにゃ。</p>
                  <%= link_to raw('<i class="fa-solid fa-dove"></i> スケジュールを作成する'), new_schedule_path, class: 'btn bg-yellow-100' %>
                </div>
              <% else %>
                <% @schedules.each do |schedule| %>
                  <% schedule.tasks.each do |task| %>
                    <%= render "schedule", { schedule: schedule, task: task } %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="m-4 mx-auto">
    <%= render "achievement", steps: @steps %>
  </div>
</main>

