<main class="w-full px-5 mx-auto">

      <%= render "ai_message", task: @next_task %>
      <div class="container mx-auto">
        <div class="flex flex-wrap md:flex-nowrap h-96">
          <%= render template: "goals/show", locals: { goal: @goal, step: @step } %>
          <div class="m-1 h-full w-full md:w-1/2 flex flex-col", style="background: #e5ffe5; border: dotted 2px #00ff00; padding: 1rem;">
            <h2 class="text-xl text-white flex justify-center w-auto p-3 bg-green-600 rounded-tr-full rounded-tl-full">あなたのスケジュール</h2>
            <div class="w-full bg-lime-50 z-0 relative overflow-auto", style="box-shadow: inset 0 0 10px 3px #eaf5f9;">
              <div class="w-full ml-10 mt-9">
                <% if @schedules.empty? %>
                  <p>スケジュールを作成してください。</p>
                <% else %>
                  <% @schedules.each do |schedule| %>
                    <% schedule.tasks.each do |task| %>
                      <%= render "schedule", { schedule: schedule, task: task } %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-4 w-full">

      </div>
    </div>
  </div>
</main>

