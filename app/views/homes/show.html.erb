<main class="w-full px-5 xl:px-40 mx-auto">
  <%= render "ai_message", task: @next_task %>
  <div class="w-full">
    <div class="flex flex-wrap md:flex-nowrap">
      <%= render template: "goals/show", locals: { goal: @goal, step: @step } %>
      <div class="mt-3 md:mt-0 m-0 md:m-1 w-full md:w-1/2 flex flex-col" style="height: 40rem; background: #e5ffe5; border: dotted 2px #00ff00; padding: 1rem;">
        <h2 class="text-xl text-white flex justify-center w-auto p-3 bg-green-600 rounded-tr-full rounded-tl-full">あなたのスケジュール</h2>
        <div class="h-full bg-lime-50 z-0 relative overflow-auto", style="box-shadow: inset 0 0 10px 3px #e5ffe5;">
          <div class="m-10">
            <% if @schedules.empty? %>
              <div class="flex flex-col justify-center items-center py-10">
                <p class="my-20 whitespace-normal md:whitespace-pre-wrap lg:whitespace-normal">       スケジュールを
  作成してくださいにゃ。</p>
                <%= link_to raw('<i class="fa-solid fa-dove"></i> スケジュールを作成する'), new_schedule_path, class: 'bg-yellow-200 py-3 px-3 rounded-lg whitespace-nowrap' %>
              </div>
            <% else %>
              <% @schedules.each do |schedule| %>
                <% schedule.tasks.each do |task| %>
                  <%= render "schedule", { schedule: schedule, task: task } %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-4 w-full">
  </div>
</main>

