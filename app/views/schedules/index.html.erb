<section>
  <div class="container px-5 py-24 mx-auto">
    <div class="w-full mx-auto text-center">
      <div class="w-full mx-auto m-10 md:w-2/3" style=" background: #FFDCE0; padding: 20px; border: 2px dashed #ffb6c1; box-shadow: 0 0 0 5px #FFDCE0; -moz-box-shadow: 0 0 0 5px #FFDCE0; -webkit-box-shadow: 0 0 0 5px #FFDCE0; font-size: 100%;">
        <h1 class="text-xl">あなたのスケジュール</h1>

        <div>
          <% @schedules.each do |schedule| %>
            <div class="p-4 flex flex-col">
              <%= link_to schedule.name , schedule, class:"bg-blue-50 hover:bg-blue-100 hover:text-blue-600 text-blue-500 rounded-lg" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="p-5 flex flex-col sm:flex-row justify-center items-center">
        <%= link_to raw('<i class="fa-solid fa-dove"></i> 新しくスケジュールを作成する'), new_schedule_path, class: 'bg-yellow-200 py-3 p-6 m-3 rounded-lg' %> |
        <%= link_to raw('<i class="fa-solid fa-house"></i> ホームへ'), home_path(current_user.id), class: 'bg-yellow-200 py-3 p-6 m-3 rounded-lg my-2 sm:my-0' %>
      </div>
    </div>
  </div>
</section>