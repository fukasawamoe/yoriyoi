<section>
  <div class="container px-5 py-24 mx-auto">
    <div class="w-full mx-auto text-center">
      <div class="box51 w-full mx-auto m-10 md:w-2/3">
        <h1 class="text-xl">あなたのスケジュール</h1>

        <div>
          <% @schedules.each do |schedule| %>
            <div class="p-4 flex flex-col">
              <%= link_to schedule.name , schedule, class:"bg-blue-50 hover:bg-blue-100 hover:text-blue-600 text-blue-500 rounded-full" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="p-5 flex flex-col sm:flex-row justify-center items-center">
        <%= link_to raw('<i class="fa-solid fa-dove"></i> 新しくスケジュールを作成する'), new_schedule_path, class: 'btn btn-accent m-3' %> |
        <%= link_to raw('<i class="fa-solid fa-house"></i> ホームへ'), home_index_path, class: 'btn btn-secondary m-3' %>
      </div>
    </div>
  </div>
</section>